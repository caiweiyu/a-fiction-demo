body {
    padding-bottom: 14.53125vw;
}

.myBook {
    width: 100%;
    height: auto;
    background: #fff;
    padding: 5vw 0;
}

.myBookList {
    width: 100%;
    height: 38.75vw;
    padding: 2.34375vw;
    position: relative;
    overflow: hidden;
}

.myBookList>a {
    display: flex;
    justify-content: flex-start;
}

.myBookImg {
    height: 31.71875vw;
    width: 24vw;
    box-shadow: 0px 2px #ddd;
    box-sizing: border-box;
}

.myBookImgtest {
    background: url(/static/images/Page/book/book01.png);
    background-size: 100% 100%;
    height: 31vw;
    width: 26.09375vw;
    box-shadow: 0px 2px #ddd;
}

.myBookContent {
    width: 50.78125vw;
    height: 34.21875vw;
    float: left;
    padding: 0 2.34375vw;
}

.myBookName {
    width: 100%;
    font-size: 3.8656249999999996vw;
    color: #000;
    font-weight: bold;
}

.myBookReadingTo {
    font-weight: bold;
}

.myBookReadingTo,
.myBookNewBook,
.myBookNumNow {
    width: 100%;
    font-size: 3.3218750000000003vw;
    color: #7f7e7e;
    margin-top: .6vw;
}

.itemRead {
    position: absolute;
    right: 7.03125vw;
    top: 40%;
}

.itemRead>div {
    width: 17.96875vw;
    height: 5.78125vw;
    line-height: 5.08125vw;
    text-align: center;
    color: #ffa02f;
    border: .35vw solid #ffa02f;
    border-radius: .5vw;
}

.deleteMybookItem {
    display: inline-block;
    position: absolute;
    right: 0;
    text-align: center;
    font-size: 3.18125vw;
    border-radius: 0.35125vw;
    background: #4dacfb;
    color: #fff;
    border: .35vw solid #4dacfb;
    width: 8.96875vw;
    right: 7.03125vw;
    top: 20%;
}

.recomMend {
    position: absolute;
    right: -3vw;
    top: -1vw;
    width: 10.943689110435825vw;
    height: 5.5vw;
    background: #58aefc;
    color: #fff;
    font-size: 1vw;
    transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    -o-transform: rotate(45deg);
}

.recomMend:after {
    right: -2.5vw;
    top: 2vw;
    content: "推荐";
    width: 16.943689vw;
    height: 5.5vw;
    font-size: 3.35vw;
    transform: rotate(-6deg);
    position: absolute;
    text-align: center;
    background: #58aefc;
}

.myBookDelete {
    width: 10.15625vw;
    height: 7.65625vw;
    position: absolute;
    top: 5vw;
    right: 7vw;
    line-height: 7.65625vw;
    color: #fff;
    background: #ffa335;
    text-align: center;
    font-size: 3.18125vw;
    border-radius: 0.78125vw;

}

/*热门模块*/
.Block {
    width: 100%;
    min-height: 48.90625vw;
    background: #fff;
    margin-top: 1.875vw;
    overflow: hidden;

}

.blockHeader {
    width: 100%;
    height: 7.1875vw;
    padding: 0 5.625vw;
}

.blockName {
    height: 100%;
    float: left;
    font-size: 4.26875vw;
    line-height: 7.1875vw;
    color: #000;
    font-weight: bold;
}

.readingMore {
    height: 100%;
    float: right;
    line-height: 7.1875vw;
    font-size: 2.8984375vw;
    color: #a2a2a1;
}

.blockCont {
    width: 100%;
    min-height: 40.46875vw;
    padding: 1.5625vw 2.421875vw 0 2.421875vw;
}

.horizontalBlockList {
    width: 25.3125vw;
    min-height: 40.46875vw;
    margin: 0 3.203125vw;
    float: left;
}

.horizontalBlockList>a {
    display: block;
    width: 100%;
    height: 100%;
}

.horizontalBlockList>a>.horizontalBlockListImg {
    width: 100%;
    height: 31.71875vw;
}

.horizontalBlockList>a>.horizontalBlockListName {
    width: 100%;
    height: 6.09375vw;
    line-height: 6.09375vw;
    font-size: 3.16875vw;
    text-align: center;
    color: #646464;
}

.verticalList {
    width: 90.9375vw;
    height: 13.125vw;
    margin: 0 auto;
    border-bottom: 1px solid #dcdcdb;
    line-height: 13.125vw;
}

.verticalList>span {
    float: left;
    height: 100%;
}

.bookName {
    font-size: 4.0265625vw;
    color: #333333;
    margin-left: 7.03125vw;
}

.bookAuthor {
    font-size: 3.096875vw;
    color: #7b7b7b;
    margin-left: 10vw;
}

/*书架样式*/
.bookRack {
    width: 100%;
    min-height: 9.375vw;
    line-height: 9.375vw;
    display: flex;
    justify-content: center;
    background: #fff;
}

.bookRack>div {
    width: 50%;
    text-align: center;
    font-size: 4.0265625vw;
    font-weight: bold;
}

.bookRack>div:nth-child(2) {
    border-left: .35vw solid #f6f5f5;
}

.bookRackCur {
    color: #ffa02f;
    border-bottom: .45vw solid #ffa02f;
}

.bookRack span {
    width: 50%;
    display: inline-block;
}

.manageBox {
    min-height: 8.25vw;
    background: #f6f5f5;
    display: flex;
    flex-direction: row-reverse;
}

.manageBox>span {
    padding: .5vw;
    background: #ffa02f;
    color: #fff;
    font-size: 3.3328124999999997vw;
    margin-right: 7vw;
    height: 6vw;
    line-height: 6vw;
    border-radius: .45vw;
    width: 9vw;
    text-align: center;
    margin-top: 1vw;
}