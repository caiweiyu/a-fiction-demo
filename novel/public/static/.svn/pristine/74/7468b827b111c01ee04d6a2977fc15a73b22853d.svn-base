.myBook {
    width: 100%;
    height: auto;
    background: #fff;
}

.myBookList {
    width: 100%;
    height: 38.75vw;
    padding: 2.34375vw;
}

.myBookImg {
    width: 28.74vw;
    height: 34.21875vw;
    float: left;
}

.myBookContent {
    width: 50.78125vw;
    height: 34.21875vw;
    float: left;
    padding: 2.34375vw;
}

.myBookName {
    width: 100%;
    font-size: 3.4046874vw;
    color: #000;
}

.myBookReadingTo {
    width: 100%;
    font-size: 2.925vw;
    color: #4dacfb;
}

.myBookDelete {
    width: 10.15625vw;
    height: 7.65625vw;
    position: absolute;
    top: 5vw;
    right: 5vw;
    line-height: 7.65625vw;
    border: 1px solid #ffa335;
    color: #ffa335;
    text-align: center;
    font-size: 3.18125vw;
    border-radius: 0.78125vw;
}

/*热门模块*/
.Block {
    width: 100%;
    min-height: 48.90625vw;
    background: #fff;
    margin-top: 1.875vw;
    overflow: hidden;

}

.blockHeader {
    width: 100%;
    height: 7.1875vw;
    padding: 0 5.625vw;
}

.blockName {
    height: 100%;
    float: left;
    font-size: 4.26875vw;
    line-height: 7.1875vw;
    color: #000;
    font-weight: bold;
}

.readingMore {
    height: 100%;
    float: right;
    line-height: 7.1875vw;
    font-size: 2.8984375vw;
    color: #a2a2a1;
}

.blockCont {
    width: 100%;
    min-height: 40.46875vw;
    padding: 1.5625vw 2.421875vw 0 2.421875vw;
}

.horizontalBlockList {
    width: 25.3125vw;
    min-height: 40.46875vw;
    margin: 0 3.203125vw;
    float: left;
}

.horizontalBlockList > a {
    display: block;
    width: 100%;
    height: 100%;
}

.horizontalBlockList > a > .horizontalBlockListImg {
    width: 100%;
    height: 31.71875vw;
}

.horizontalBlockList > a > .horizontalBlockListName {
    width: 100%;
    height: 6.09375vw;
    line-height: 6.09375vw;
    font-size: 3.16875vw;
    text-align: center;
    color: #646464;
}

.verticalList {
    width: 90.9375vw;
    height: 13.125vw;
    margin: 0 auto;
    border-bottom: 1px solid #dcdcdb;
    line-height: 13.125vw;
}

.verticalList > span {
    float: left;
    height: 100%;
}

.bookName {
    font-size: 4.0265625vw;
    color: #333333;
    margin-left: 7.03125vw;
}

.bookAuthor {
    font-size: 3.096875vw;
    color: #7b7b7b;
    margin-left: 10vw;
}
