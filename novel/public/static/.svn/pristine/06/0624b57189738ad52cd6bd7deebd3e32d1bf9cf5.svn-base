/*头部*/
.main {
    margin-top: 10vw;
}

.searchBox {
    width: 100%;
    height: 10.78125vw;
    background: #46a9fa;
    padding: 1.625vw 2.96875vw;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
}

.toIndex {
    float: left;
    height: 100%;
    line-height: 7.4375vw;
    font-size: 3.5vw;
}

.toIndex > a {
    display: block;
    width: 100%;
    height: 100%;
    color: #fff;
}

.toIndex > a > img {
    height: 50%;
}

.searchBtn {
    float: right;
    width: 5.1875vw;
    height: 5.1875vw;
    background: url(/static/images/Page/bookSearch.png) no-repeat center center;
    background-size: 100% 100%;
    margin-top: 1.325vw;
    margin-right: 1.78125vw;
}

.searchBtn > a {
    display: block;
    width: 100%;
    height: 100%;
}

.searchTitle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-size: 3.5vw;
}