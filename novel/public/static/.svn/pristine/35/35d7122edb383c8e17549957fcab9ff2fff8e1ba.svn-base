@keyframes animate_show {
    0% {
        opacity: 0;
        display: none;
        width: 0;
        height: 0;
        transform: rotate(-90deg);
    }

    100% {
        opacity: 1;
        display: block;
        width: 100%;
        height: 30vw;
        transform: rotate(0);
    }
}

@keyframes animate_hide {
    0% {
        opacity: 1;
        display: block;
        width: 100%;
        height: 30vw;
        transform: rotate(0);
    }

    100% {
        opacity: 0;
        display: none;
        width: 0;
        height: 0;
        transform: rotate(-90deg);
    }
}

@keyframes big_to_small {
    0% {
        transform: rotate(0);

    }

    25% {
        transform: rotate(-3deg);
    }

    50% {
        transform: rotate(0deg);
    }

    75% {
        transform: rotate(3deg);
    }

    100% {
        transform: rotate(0);

    }
}