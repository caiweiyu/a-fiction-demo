html {
    padding-bottom: 14.53125vw;
}

.searchBox {
    width: 100%;
    height: 10.78125vw;
    background: #fff;
    padding: 1.625vw 2.96875vw;
}

.searchLabel {
    float: left;
    width: 59.6875vw;
    height: 7.4375vw;
    background: #e9f5ff;
    border-radius: 1.625vw;
}

.searchLabel > input {
    width: 50.59375vw;
    height: 100%;
    color: #85888b;
    border: none;
    background: none;
    padding-left: 1.5vw;
    box-sizing: border-box;
}

.searchLabel > .searchBtn {
    float: right;
    width: 5.1875vw;
    height: 5.1875vw;
    background: url(/static/images/Page/searchBtn.png) no-repeat center center;
    background-size: 100% 100%;
    margin-top: 1.325vw;
    margin-right: 1.78125vw;
}

.channel {
    float: right;
    border-radius: 0.78125vw;
    border: 1px solid #ffa02f;
    color: #ffa02f;
    margin-top: 1vw;
}

.channel > .cur {
    background: #ffa02f;
    color: #fff;
}

.channel > span {
    width: 8.96874vw;
    height: 100%;
    border-radius: 0.78125vw;
    float: left;
    text-align: center;
}

.indexBanner {
    width: 100%;
    height: 35.9375vw;
    overflow: hidden;
}

.indexBannerSlide > a {
    width: 100%;
    height: 35.9375vw;
}

.indexBannerSlide > a > img {
    width: 100%;
    height: 35.9375vw;
}

.continueReading {
    width: 100%;
    background: #fff;
}

.continueReading > a {
    display: block;
    height: 13vw;
}

.continueTitle {
    width: 21.71875vw;
    height: 100%;
    float: left;
    margin-left: 2.1875vw;
}

.continueTitle > img {
    width: 4.375vw;
    height: 4.375vw;
    float: left;
    margin-left: 1.71875vw;
    margin-top: 3.9375vw;
}

.continueTitle > span {
    float: left;
    width: 15.625vw;
    height: 100%;
    line-height: 12.8124vw;
    font-size: 3.18125vw;
    color: #45a8fa;
    box-sizing: border-box;
    padding-left: 0.625vw;
}

.continueReading > a > i {
    float: left;
    width: 0.46875vw;
    height: 4.0625vw;
    background: #000;
    margin-top: 4.0625vw;
}

.continueCont {
    width: 62.65625vw;
    height: 100%;
    float: left;
    padding-left: 2.34375vw;
}

.continueName {
    width: 100%;
    height: 50%;
    display: block;
    color: #000;
    font-size: 3.6234375vw;
    line-height: 8.4062vw;

}

.continueChapter {
    width: 100%;
    height: 50%;
    display: block;
    color: #575757;
    font-size: 3.221875vw;
    line-height: 4.4062vw;
    padding-left: 2vw;
}

