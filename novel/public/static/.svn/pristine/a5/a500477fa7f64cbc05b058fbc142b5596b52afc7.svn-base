/*头部*/
.searchBox {
    position: fixed;
    width: 100%;
    height: 10.78125vw;
    background: #ffa02f;
    padding: 1.625vw 2.96875vw;
    overflow: initial;
    z-index: 3;
}

.toIndex {
    float: left;
    height: 100%;
    line-height: 7.4375vw;
    font-size: 3.5vw;
}

.toIndex > a {
    display: block;
    width: 100%;
    height: 100%;
    color: #fff;
}

.toIndex > a > img {
    height: 50%;
}

.searchBtn {
    float: right;
    width: 5.1875vw;
    height: 5.1875vw;
    background: url(/static/images/Page/search.png) no-repeat center center;
    background-size: 100% 100%;
    margin-top: 1.325vw;
    margin-right: 1.78125vw;
}

.searchLabel {
    float: right;
    width: 78vw;
    height: 100%;
    background: #fff;
    border-radius: 7.53125vw;
    overflow: hidden;
    padding-left: 3vw;
}

.searchLabel input {
    height: 100%;
    border: 0;
    width: 57vw;
}

.recommendSearchBox {
    display: none;
    position: absolute;
    bottom: -39vw;
    left: 0;
    width: 100%;
    background: #fff;
    font-family: cursive;
    font-size: 3.5vw;
    z-index: 3;
}

.recommendSearchHeader {
    color: #a0a0a0;
    background: #f6f5f5;
    width: 100%;
    height: 6vw;
    line-height: 6vw;
    padding-left: 3vw;
}

.recommendSearchHeader > i {
    width: 1px;
    height: 40%;
    background: #ffa02f;
    float: left;
    margin-top: 1.4vw;
    margin-right: 1vw;
}

.recommendSearchContent {
    width: 100%;
    padding: 4vw;
    min-height: 25vw;
}

.recommendSearchContent > span {
    background: #f6f5f5;
    color: #a0a0a0;
    height: 6vw;
    line-height: 6vw;
    float: left;
    padding: 0 2vw;
    border-radius: 6vw;
    margin: 0 2vw;
    font-size: 3vw;
}

.changeRecommendSearchContent {
    color: #a0a0a0;
    width: 92vw;
    height: 8vw;
    line-height: 8vw;
    text-align: center;
    border-top: 1px solid #eee;
    margin: 0 auto;
}

.main {
    padding-top: 10.78125vw;
}

.searchContentBox {
    padding: 2vw;
}

.PortraitContent {
    border-bottom: 1px solid #eee;
}

.PortraitContent > a {
    width: 100%;
    display: block;
    height: 100%;
}

.PortraitContentListTitle {
    width: 64vw;
}

.PortraitContentListTitle > div:first-child {
    font-size: 4.5vw;
}

.PortraitContentListTitle > div:nth-child(2) {
    height: 9vw;
    overflow: hidden;
    margin: 4vw 0;
    font-size: 3.2vw;
}

.PortraitContentListImg {
    width: 24vw;
}

.PortraitContentListFooter {
    width: 100%;
    height: 5vw;
}

.PortraitContentListAuthor {
    float: left;
    max-width: 20vw;
    font-size: 3vw;
}

.PortraitFooterBtn {
    float: right;
    margin-top: 0;
}