input[type="text"],
input[type="button"],
input[type="submit"],
input[type="reset"],
select,
textarea,
button {
    -webkit-appearance: none;
}

body {
    padding-bottom: 14vw !important;
}

input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0px 100px white inset;
}

.main {
    background: #f6f5f5;
    padding-top: 10.78125vw;
}

.bookTop {
    background: #fff;
    padding: 2.34375vw 6.09375vw 0 6.09375vw;
    border-bottom: 2vw dashed #eee;
}

.bookInfoBox {
    width: 100%;
    height: 27.8125vw;
    background: #fff;
}

.bookImg {
    height: 100%;
    width: 20.625vw;
    float: left;
}

.bookInfo {
    width: 64vw;
    height: 100%;
    float: left;
    padding-left: 3vw;
}

.bookTips {
    width: 100%;
    height: 4.6875vw;
    font-size: 3.8656256vw;
    font-weight: 400;
    height: 8vw;
    line-height: 8vw;
    margin-left: 2vw;
}

.bookTips>span {
    display: inline-block;
    width: auto;
    padding: 0 1.9375vw;
    background: #a7c0d5;
    color: #748797;
    border-radius: 4.0625vw;
    margin: 0 0.625vw;
}

.bookName {
    width: 100%;
    height: 10vw;
    line-height: 10vw;
    color: #000;
    font-size: 4.83125vw;
    font-weight: bold;
    overflow: hidden;
}

.bookFooterContent {
    /* padding: 0 2.421875vw 0 2.421875vw; */
    background: #eee;
}

.bookDetails {
    min-height: 10.4375vw;
    line-height: 10.4375vw;
    font-family: '楷体';
    font-size: 3.55vw;
    display: flex;
    justify-content: space-between;
    /* padding: 0 1.625vw; */
    padding: 0 2.421875vw 0 2.421875vw;
}

img.bookPicture {
    /* background: url(/static/images/Page/moreany.png) no-repeat center center; */
    background-size: 100%;
    vertical-align: bottom;
    display: block;
    width: 5vw;
    margin-top: 3vw;
    height: 5vw;
}

.footerEnd {
    display: none;
    margin: 0 auto;
    font-size: 3.46875vw;
    font-family: '楷体';
    position: relative;
    /* min-height: 20vw; */
    background: #fff;
    padding: 0 2.421875vw 0 2.421875vw;
}

.footerEnd>p {
    text-align: left;
    font-size: 3.5vw;

}

.bookAuthor {
    width: 100%;
    color: #404040;
    font-size: 3.8656256vw;
    height: 8vw;
    line-height: 8vw;
    margin-left: 2vw;
}

.bookBtn {
    height: 10vw;
    width: 100%;
    margin-top: 2.8125vw;
}

.bookBtn>a {
    width: 42.65625vw;
    height: 100%;
    line-height: 10vw;
    text-align: center;
    color: #fff;
    font-size: 4.6vw;
    border-radius: 0.4970703125vw;
}

.readingBook {
    background: #ffa02f;
    float: left;
}

.joinInBookshelf {
    background: #46a9fa;
    float: right;
}

.bookUpdate {
    display: block;
    position: relative;
    width: 100%;
    height: 10.4375vw;
    font-size: 3.81874vw;
    box-sizing: border-box;
    line-height: 10.4375vw;
}

.bookUpdate a {
    display: block;
    color: #000;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.bookUpdate div {
    width: 41vw;
    overflow: hidden;
    height: 100%;
    display: inline-block;
    float: left;
    font-size: 3.3125vw;
    text-decoration: underline;
}

.bookUpdate em {
    font-weight: bold;
    margin-right: 5vw;
    height: 100%;
    float: left;
}

.bookUpdate span {
    float: right;
    font-size: 3vw;
    width: 28vw;
    overflow: hidden;
}

.intro {
    width: 100%;
    height: auto;
    margin-top: 5.8125vw;
    background: #fff;
}

.introContent {
    width: 100%;
    border-bottom: 1px solid #d7d7d7;
    line-height: 4.53125vw;
    font-size: 3.3125vw;
    padding-bottom: 6vw;
}

.Block {
    width: 100%;
    min-height: 48.90625vw;
    background: #fff;
    margin-top: 0;
    overflow: hidden;
}

.blockHeader {
    width: 100%;
    height: 8.1875vw;
    padding: 0 5.625vw;
}

.blockName {
    height: 100%;
    float: left;
    font-size: 4.26875vw;
    line-height: 11.1875vw;
    color: #000;
    font-weight: bold;
}

.randomBook {
    height: 100%;
    float: right;
    line-height: 11.1875vw;
    font-size: 2.8984375vw;
    color: #a2a2a1;
}

.blockCont {
    width: 100%;
    min-height: 40.46875vw;
    padding: 1.5625vw 2.421875vw 0 2.421875vw;
}

.horizontalBlockList {
    width: 25.3125vw;
    min-height: 40.46875vw;
    margin: 0 3.203125vw;
    float: left;
    margin-top: 4vw;
}

.horizontalBlockList>a {
    display: block;
    width: 100%;
    height: 100%;
}

.horizontalBlockList>a>.horizontalBlockListImg {
    width: 100%;
    height: 31.71875vw;
    border-radius: 1.5vw;
    box-shadow: 0px 3px 3px #999;
}

.horizontalBlockList>a>.horizontalBlockListName {
    width: 100%;
    min-height: 6.09375vw;
    line-height: 6.09375vw;
    font-size: 3.46875vw;
    text-align: center;
    color: #646464;
    font-family: cursive;
}

/*头部*/
.searchBox {
    position: fixed;
    top: 0;
    width: 100%;
    height: 10.78125vw;
    background: #ffa02f;
    padding: 1.625vw 2.96875vw;
    overflow: hidden;
    z-index: 3;
}

.toIndex {
    float: left;
    height: 100%;
    line-height: 7.4375vw;
    font-size: 3.5vw;
}

.toIndex>a {
    display: block;
    width: 100%;
    height: 100%;
    color: #fff;
}

.toIndex>a>img {
    height: 50%;
}

.searchBtn {
    float: right;
    width: 5.1875vw;
    height: 5.1875vw;
    background: url(/static/images/Page/bookSearch.png) no-repeat center center;
    background-size: 100% 100%;
    margin-top: 1.325vw;
    margin-right: 1.78125vw;
}

.searchBtn>a {
    display: block;
    width: 100%;
    height: 100%;
}

.searchTitle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-size: 3.5vw;
}

.readingMore {
    display: block;
}