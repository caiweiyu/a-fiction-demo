html {
    padding-bottom: 14.53125vw;
}

.searchBox {
    width: 100%;
    height: 8.78125vw;
    background: #fff;
    padding: 1.625vw 2.96875vw;
}

.searchLabel {
    float: left;
    width: 59.6875vw;
    height: 5.4375vw;
    background: #e9f5ff;
    border-radius: 0.625vw;
}

.searchLabel > input {
    width: 43.59375vw;
    height: 100%;
    color: #85888b;
    border: none;
    background: none;
    padding-left: 1.5vw;
    box-sizing: border-box;
}

.searchLabel > .searchBtn {
    float: right;
    width: 4.1875vw;
    height: 4.1875vw;
    background: url("/static/images/Page/searchBtn.png") no-repeat center center;
    background-size: 100% 100%;
    margin-top: 0.625vw;
    margin-right: 0.78125vw;
}

.channel {
    float: right;
    border-radius: 0.78125vw;
    border: 1px solid #ffa02f;
    color: #ffa02f;
}

.channel > .cur {
    background: #ffa02f;
    color: #fff;
}

.channel > span {
    width: 8.96874vw;
    height: 100%;
    border-radius: 0.78125vw;
    float: left;
    text-align: center;
}

.indexBanner {
    width: 100%;
    height: 35.9375vw;
    overflow: hidden;
}

.indexBannerSlide > a {
    width: 100%;
    height: 35.9375vw;
}

.indexBannerSlide > a > img {
    width: 100%;
    height: 35.9375vw;
}

.continueReading {
    width: 100%;
    height: 12.8124vw;
    background: #fff;
}

.continueTitle {
    width: 21.71875vw;
    height: 100%;
    float: left;
    margin-left: 2.1875vw;
}

.continueTitle > img {
    width: 4.375vw;
    height: 4.375vw;
    float: left;
    margin-left: 1.71875vw;
    margin-top: 3.9375vw;
}

.continueTitle > span {
    float: left;
    width: 15.625vw;
    height: 100%;
    line-height: 12.8124vw;
    font-size: 3.18125vw;
    color: #45a8fa;
    box-sizing: border-box;
    padding-left: 0.625vw;
}

.continueReading > a > i {
    float: left;
    width: 0.46875vw;
    height: 4.0625vw;
    background: #000;
    margin-top: 4.0625vw;
}

.continueCont {
    width: 62.65625vw;
    height: 100%;
    float: left;
    padding-left: 2.34375vw;
}

.continueName {
    width: 100%;
    height: 50%;
    display: block;
    color: #000;
    font-size: 3.6234375vw;
    line-height: 8.4062vw;

}

.continueChapter {
    width: 100%;
    height: 50%;
    display: block;
    color: #575757;
    font-size: 3.221875vw;
    line-height: 4.4062vw;
    padding-left: 2vw;
}

.Block {
    width: 100%;
    min-height: 48.90625vw;
    background: #fff;
    margin-top: 1.875vw;
    overflow: hidden;

}

.blockHeader {
    width: 100%;
    height: 7.1875vw;
    padding: 0 5.625vw;
}

.blockName {
    height: 100%;
    float: left;
    font-size: 4.26875vw;
    line-height: 7.1875vw;
    color: #000;
    font-weight: bold;
}

.readingMore {
    height: 100%;
    float: right;
    line-height: 7.1875vw;
    font-size: 2.8984375vw;
    color: #a2a2a1;
}

.blockCont {
    width: 100%;
    min-height: 40.46875vw;
    padding: 1.5625vw 2.421875vw 0 2.421875vw;
}

.horizontalBlockList {
    width: 25.3125vw;
    min-height: 40.46875vw;
    margin: 0 3.203125vw;
    float: left;
}

.horizontalBlockList > a {
    display: block;
    width: 100%;
    height: 100%;
}

.horizontalBlockList > a > .horizontalBlockListImg {
    width: 100%;
    height: 31.71875vw;
}

.horizontalBlockList > a > .horizontalBlockListName {
    width: 100%;
    min-height: 6.09375vw;
    line-height: 6.09375vw;
    font-size: 3.16875vw;
    text-align: center;
    color: #646464;
}

.verticalList {
    width: 90.9375vw;
    height: 13.125vw;
    margin: 0 auto;
    border-bottom: 1px solid #dcdcdb;
    line-height: 13.125vw;
}

.verticalList > span {
    float: left;
    height: 100%;
}

.bookName {
    font-size: 4.0265625vw;
    color: #333333;
    margin-left: 7.03125vw;
}

.bookAuthor {
    font-size: 3.096875vw;
    color: #7b7b7b;
    margin-left: 10vw;
}


